<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunningActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">
        <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"

        />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/start_run"
            android:id="@+id/startRun"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/startRun"
            android:layout_centerVertical="true"
            android:text="@string/stop_run"
            android:id="@+id/stopRun"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/showInfo"
            android:background="@null"
            android:layout_toRightOf="@+id/stopRun"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text=""
            android:textColor="@color/Black"
            android:layout_marginLeft="5dp"/>




    </RelativeLayout>

</RelativeLayout>